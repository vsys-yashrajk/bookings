{{template "admin" .}}

{{define "css"}}
    <link href="https://cdn.jsdelivr.net/npm/simple-datatables@latest/dist/style.css" rel="stylesheet" type="text/css">
{{end}}

{{define "page-title"}}
    All Reservations
{{end}}

{{define "content"}}
    <div class="col-md-12">
        {{$res := index .Data "reservations"}}

        <table class="table table-striped table-hover" id="all-res">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Room</th>
                    <th>Arrival</th>
                    <th>Departure</th>
                </tr>
            </thead>
            <tbody>
                {{range $res}}
                    <tr>
                        <th>{{.ID}}</th>
                        <th>{{.FirstName}}</th>
                        <th>
                            <a href="/admin/reservations/all/{{.ID}}" style="text-decoration: none;">
                                {{.LastName}}
                            </a>
                        </th>
                        <th>{{.Room.RoomName}}</th>
                        <th>{{humanDate .StartDate}}</th>
                        <th>{{humanDate .EndDate}}</th>
                    </tr>
                {{end}}
            </tbody>
        </table>
    </div>
{{end}}

{{define "js"}}
    <script src="https://cdn.jsdelivr.net/npm/simple-datatables@latest" type="text/javascript"></script>
    <script>
        const dataTable = new simpleDatatables.DataTable("#all-res", {
        select: 4, sort: "desc",
        })
    </script>
{{end}}